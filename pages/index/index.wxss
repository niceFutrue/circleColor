.picker_view {width: 280px;height: 280px;margin: auto;position: relative;}
.picker{width: 100%;height: 100%;position: relative;z-index: 1;}
.picker_ball{width: 100%;height: 100%;position: absolute;top:0;left:0;z-index:3;}

.show_num{width:90%;font-size: 18px;margin: 10px auto;}
.flex{display: flex;justify-content: space-around;}
.tab{padding: 6px 18px;color:#fff;margin: 10px;border-radius: 12px;transition: all .5s ease-in-out;}
.tab:nth-child(1){background-color: red;}
.tab:nth-child(2){background-color: green;}
.tab:nth-child(3){background-color: blue;}
.tab:hover{background-color: #2a313f;}

.footer_text{padding-left: 24px;margin-top: 30px;}